{
  "name": "paper-translate-ai",
  "version": "1.0.0",
  "description": "Academic paper translation with LangGraph",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:langraph": "cd langraph-agent && python main.py",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "keywords": [
    "translation",
    "pdf",
    "langraph",
    "ai"
  ],
  "author": "",
  "license": "MIT"
}
